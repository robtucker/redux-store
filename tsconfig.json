{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist",
        "declaration": true,
        "sourceMap": true,
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "importHelpers": true,
        "jsx": "react",
        "baseUrl": "./src",
        "lib": [
            "es2017",
            "dom"
        ],
        "types": [
            "node",
            "jest"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "./src/**/*.tsx",
        "./src/**/*.ts"
    ]
}